<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="选择图片"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="查看大图" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@id/btn_view_image"
        android:layout_marginTop="30dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            />

        <com.max.test.testkotlin.view.ItemBar
            android:id="@+id/ib_more_item1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:itemHint="今天未签到"
            app:itemHintColor="#ff5555"
            app:itemIcon="@drawable/ic_money"
            app:itemTitle="签到领红包" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            />

        <com.max.test.testkotlin.view.ItemBar
            android:id="@+id/ib_more_item2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:itemHint=""
            app:itemIcon="@drawable/ic_alipay"
            app:itemTitle="点一下支付宝加100块" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            />

        <com.max.test.testkotlin.view.ItemBar
            android:id="@+id/ib_more_item3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:itemHint=""
            app:itemIcon="@drawable/ic_wechat"
            app:itemTitle="点一下微信钱包加100块" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"
            />
    </LinearLayout>
</RelativeLayout>